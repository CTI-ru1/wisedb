<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wisedb.model.Schedule" table="schedules"
           dynamic-update="true" dynamic-insert="true">

        <id name="id" column="id" type="int">
            <generator class="native"/>
        </id>


        <property name="capability" length="200" not-null="true"/>
        <property name="node" length="200" not-null="true"/>
        <property name="minute" type="character" not-null="true"/>
        <property name="hour" type="character" not-null="true"/>
        <property name="dom" type="character" not-null="true"/>
        <property name="month" type="character" not-null="true"/>
        <property name="dow" type="character" not-null="true"/>
        <property name="payload" length="200" not-null="true"/>

    </class>
</hibernate-mapping>
